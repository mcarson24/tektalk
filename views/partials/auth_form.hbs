<form action="/{{action}}" method="POST" class="flex flex-col">
  <div class="flex items-center justify-end my-2">
    <label for="username">Username</label>
    <input type="text" id="username" name="username" class="bg-gray-100 rounded py-2 px-1 ml-2 border border-gray-300">
  </div>
  <div class="flex items-center justify-end my-2">
    <label for="password">Password</label>
    <input type="password" id="password" name="password" class="bg-gray-100 rounded py-2 px-1 ml-2 border border-gray-300">
  </div>
  <div class="flex justify-end">
    <input type="submit" value="Login" class="bg-blue-500 py-2 px-1 rounded text-white hover:cursor-pointer">
  </div>
</form>