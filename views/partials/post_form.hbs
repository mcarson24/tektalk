<form action="{{action}}" method="{{method}}" class="{{class}}">
  <div>
    <label for="title">Title</label>
    <input type="text" name="title" id="title" class="bg-gray-100 border border-gray-500" value="{{#if post}}{{post.title}}{{/if}}">
  </div>
  <div>
    <textarea name="body" cols="30" rows="10" class="bg-gray-100 border border-gray-500">{{#if post}}{{post.body}}{{/if}}</textarea>
  </div>
  <div>
    <input type="submit" value="{{buttonText}}" class="py-2 px-4 rounded-md cursor-pointer bg-green-500 text-white">
  </div>
</form>