<form action="{{action}}" method="{{method}}" class="{{class}} flex flex-col w-full">
  <div class="flex flex-col mb-4">
    <label for="title" class="text-xl mb-2 text-indigo-900 font-bold">Title</label>
    <input type="text" name="title" id="title" class="py-2 bg-gray-100 border border-gray-500" value="{{#if post}}{{post.title}}{{/if}}">
  </div>
  <div class="flex flex-col mb-4">
    <label for="title" class="text-xl mb-2 text-indigo-900 font-bold">Body</label>
    <textarea name="body" cols="30" rows="10" class="p-2 bg-gray-100 border border-gray-500">{{#if post}}{{post.body}}{{/if}}</textarea>
  </div>
  <div class="text-right">
    <input type="submit" value="{{buttonText}}" class="py-2 px-4 rounded-md cursor-pointer bg-indigo-700 text-white">
  </div>
</form>