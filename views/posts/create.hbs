<h1>Create a new post</h1>

<form action="/posts" method="POST">
  <div>
    <label for="title">Title</label>
    <input type="text" name="title" id="title" class="bg-gray-100 border border-gray-500">
  </div>
  <div>
    <textarea name="body" cols="30" rows="10" class="bg-gray-100 border border-gray-500"></textarea>
  </div>
  <div>
    <input type="submit" value="Post" class="py-2 px-4 rounded-md cursor-pointer bg-green-500 text-white">
  </div>
</form>